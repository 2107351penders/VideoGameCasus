@page
@model VideoGameCasus.Pages.SignupModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Sign Up Page</title>
</head>
<body>
    <div class="wrapper">
        <div class="container fluid">
            <div class="col-align-self-center">
                <form method="post">
                    <div class="input-box">
                        <h3>Sign up!</h3>
                        @if (Model.passwordComplexityError)
                        {
                            <p style=color:red>Password complexity requirements not met</p>
                        }
                        <div class="input-field">
                            <label for="username">Username</label>
                            <input asp-for="userName" type="text" class="input" id="username" required autocomplete="off">
                        </div>
                        <div class="input-field">
                            <label for="password">Password</label>
                            <input asp-for="password" type="password" class="input" id="password" required>
                        </div>
                        <div class="input-field">
                            <br>
                            <input type="submit" class="submit" id="submit">
                        </div>
                        <span>
                            Already have an account? <a href="/Login">Log in</a> now!
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <style>
        * {
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }

        .wrapper {
            background-image: url('images/loginbackground.jpg');
            background-color: black;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .fluid {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            width: 100%;
            color: white;
        }

        .input-field {
            display: flex;
            flex-direction: column;
        }
    </style>
</body>
</html>